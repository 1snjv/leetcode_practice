#include<bits/stdc++.h>
#include<algorithm>
using namespace std;
int main()
 {
	int t,n,i,j,k;
	cin>>t;
	while(t--)
	{
	    cin>>n;
	    int *a = new int[n];
	    for(i=0;i<n;i++)
	    cin>>a[i];
	    vector<int>ans, l(n),r(n);
	    for(i=0;i<n;i++)
	    {
	        int c=0;
	        for(j=0;j<ans.size();j++)
	        {
	            if(ans[j]>=a[i])
	            {
	                c=1;
	                ans[j]=a[i];
	                break;
	            }
	        }
	        if(j!=ans.size())
	        l[i]=j;
	        else
	        {
	            ans.push_back(a[i]);
	            l[i]=ans.size();
	        }
	    }
	    ans.clear();
	    for(i=n-1;i>=0;i--)
	    {
	        int c=0;
	        for(j=0;j<ans.size();j++)
	        {
	            if(ans[j]>=a[i])
	            {
	                c=1;
	                ans[j]=a[i];
	                break;
	            }
	        }
	        if(j!=ans.size())
	        r[i]=j+1;
	        else
	        {
	            ans.push_back(a[i]);
	            r[i]=ans.size();
	        }
	    }
	    int mn=0;
	    for(i=0;i<n;i++){
	      //  cout<<l[i]<<" "<<r[i]<<" :";
	        mn=max(mn,l[i]+r[i]);}
	   cout<<mn-1<<endl;
	        
	        
	}
	return 0;
}
